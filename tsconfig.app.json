{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "node_modules"],
  "compilerOptions": {
    "target": "esnext",    
    "module": "esnext",    
    "moduleResolution": "node",  
    "esModuleInterop": true,         
    "skipLibCheck": true,  
    "strict": true,                
    "jsx": "preserve",              
    "baseUrl": "./",                 
    "paths": {
      "@/*": ["src/*"]
    }
  },
}
