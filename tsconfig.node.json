{
  "extends": "@tsconfig/node20/tsconfig.json",
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "target": "esnext", 
    "module": "esnext", 
    "moduleResolution": "node", 
    "esModuleInterop": true,   
    "skipLibCheck": true, 
    "strict": true,                  
    "baseUrl": "./",                
    "paths": {
      "@/*": ["src/*"]
    }
  },
}
